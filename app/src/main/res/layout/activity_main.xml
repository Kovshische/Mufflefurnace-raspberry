<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menuPhone"
    android:orientation="vertical"
    tools:context="com.example.android.mufflefurnace.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:src="@drawable/logo_white"
         />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">


        <LinearLayout
            android:id="@+id/menu_connect"
            style="@style/MainScreenMenu"
            >

            <ImageView
                android:id="@+id/menu_connect_image"
                style="@style/MaineScreenIcon"
                android:src="@drawable/ic_settings_ethernet_white_36dp"
                />

            <TextView
                android:id="@+id/menu_connect_text"
                style="@style/MainScreenMenuText"
                android:text="@string/main_menu_connect"
                />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/menu_programs"
            style="@style/MainScreenMenu">

            <ImageView
                android:id="@+id/menu_programs_image"
                style="@style/MaineScreenIcon"
                android:src="@drawable/ic_format_list_bulleted_white_36dp" />


            <TextView
                android:id="@+id/menu_programs_text"
                style="@style/MainScreenMenuText"
                android:text="@string/main_menu_programs" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_archive"
            style="@style/MainScreenMenu"
            >

            <ImageView
                android:id="@+id/menu_archive_image"
                style="@style/MaineScreenIcon"
                android:src="@drawable/ic_archive_white_36dp" />

            <TextView
                android:id="@+id/menu_archive_text"
                style="@style/MainScreenMenuText"
                android:text="@string/main_menu_archive" />



        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_settings"
            style="@style/MainScreenMenu"
            android:drawSelectorOnTop="true">

            <ImageView
                android:id="@+id/menu_settings_image"
                style="@style/MaineScreenIcon"
                android:src="@drawable/ic_settings_white_36dp" />

            <TextView
                android:id="@+id/menu_settings_text"
                style="@style/MainScreenMenuText"
                android:text="@string/main_menu_settings" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_activity_temperature"
        android:textSize="64dp"
        android:paddingTop="64dp"
        android:paddingRight="64dp"
        android:layout_alignParentRight="true"
        tools:text="32 C"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_activity_time"
        android:textSize="64dp"
        android:paddingTop="64dp"
        android:paddingLeft="64dp"
        tools:text="18:00"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_activity_errors"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:paddingHorizontal="20dp"
        tools:text="@string/executing_program_program_has_finished"
        android:textAllCaps="true"
        android:textSize="32dp"
        android:textAlignment="center"
        android:padding="12dp"

        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black"
        android:visibility="invisible"
        android:background="@drawable/orange_rectangle"/>


</RelativeLayout>
