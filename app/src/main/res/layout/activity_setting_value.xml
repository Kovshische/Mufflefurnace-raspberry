<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingValueHeatingActivity">

    <EditText
        android:id="@+id/setting_value"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tools:text="23"
        style="@style/SettingsScreenTextTopic"
        android:paddingBottom="16dp"
        android:inputType="number|numberSigned|textMultiLine"
        />
    <TextView
        android:id="@+id/setting_value_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/SettingsScreenTextValue"
        tools:text="Description"/>
    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:padding="8dp"
        android:id="@+id/save_value"
        android:textColor="@color/white"
        android:text="Save"
        android:textAllCaps="true"
        android:background="@color/menuPrimary"
        android:layout_gravity="center"/>


</LinearLayout>
